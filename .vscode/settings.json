{
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.fixAll.sortJSON": "never",
    "source.organizeImports.biome": "explicit"
  },
  "editor.formatOnSave": true,
  "evenBetterToml.formatter.alignComments": true,
  "files.associations": {
    "**/dummy/mods/**/*.txt": "xml"
  },
  "files.exclude": {
    ".swc": true,
    "**/node_modules": true // optional
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.swc/**": true,
    "**/node_modules/**": true,
    "**/target/**": true
  },
  "i18n-ally.keystyle": "nested",
  "i18n-ally.localesPaths": ["locales", "gui/frontend/src/lib/i18n"],
  "json.schemas": [
    {
      "fileMatch": ["/dummy/convert/input/*.json"],
      "url": "/dummy/convert/schema.json"
    }
  ],
  "rust-analyzer.cargo.targetDir": true,
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.linkedProjects": ["Cargo.toml"],
  "rust-analyzer.runnables.extraTestBinaryArgs": ["--show-output", "--nocapture"],
  "i18n-ally.sourceLanguage": "en",
  "yaml.schemas": {
    "https://www.schemastore.org/gitea-issue-forms.json": ".github/ISSUE_TEMPLATE/*.yaml"
  }
}
