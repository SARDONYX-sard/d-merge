{
  "name": "@d-merge/electron_backend",
  "version": "0.1.0",
  "author": "SARDONYX",
  "description": "Json based hkx patcher",
  "private": true,
  "type": "commonjs",
  "main": "out/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "vite build -c ./vite.electron.config.ts && electron-builder"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "electron": "37.3.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "build": {
    "appId": "io.github.d-merge",
    "productName": "d_merge",
    "copyright": "Copyright (c) 2025 SARDONYX",
    "files": [
      "./out",
      "node_modules/**/*",
      {
        "from": "../../frontend/out",
        "to": "frontend"
      }
    ],
    "extraResources": [
      {
        "from": "../../../resource/assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        "dir",
        "portable",
        "nsis",
        "zip"
      ],
      "artifactName": "${productName}-${version}-windows-${arch}.${ext}",
      "icon": "../tauri/icons/icon.ico",
      "extraFiles": [
        "../../../ffi/javascript/node/d_merge_node.win32-x64-msvc.node"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "signIgnore": null,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "../tauri/icons/icon.icns",
      "extraFiles": [
        "../../../ffi/javascript/node/d_merge_node.aarch64-apple-darwin.node"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "zip"
      ],
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "icon": "../tauri/icons/icon.png",
      "extraFiles": [
        "../../../ffi/javascript/node/d_merge_node.x86_64-linux-gnu.node"
      ]
    }
  }
}
