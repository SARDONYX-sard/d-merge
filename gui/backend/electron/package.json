{
  "name": "@sardonyx/d-merge_electron_backend",
  "version": "0.1.0",
  "author": "SARDONYX",
  "description": "Json based hkx patcher",
  "private": true,
  "type": "commonjs",
  "main": "out/main.js",
  "scripts": {
    "dev": "electron .",
    "dev:js": "node ./esbuild.config.cjs",
    "build:js": "cross-env NODE_ENV=release node ./esbuild.config.cjs",
    "build": "npm run dev:js && electron-builder"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "archiver": "^7.0.1",
    "cross-env": "10.0.0",
    "electron": "37.3.1",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "io.github.sardonyx.d-merge",
    "productName": "d_merge",
    "copyright": "Copyright (c) 2025 SARDONYX",
    "files": [
      "./out",
      "node_modules/**/*",
      {
        "from": "../../frontend/out",
        "to": "frontend"
      }
    ],
    "extraResources": [
      {
        "from": "../../../resource/assets",
        "to": "assets"
      }
    ],
    "afterPack": "./tools/make_zip.js",
    "win": {
      "target": [
        "dir",
        "portable"
      ],
      "artifactName": "${productName}-${version}-windows-${arch}.${ext}",
      "icon": "../tauri/icons/icon.ico"
    },
    "mac": {
      "target": [],
      "signIgnore": null,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "../tauri/icons/icon.icns"
    },
    "linux": {
      "target": [],
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "icon": "../tauri/icons/icon.png"
    }
  }
}
