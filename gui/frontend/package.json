{
  "name": "d_merge",
  "version": "0.1.0",
  "private": true,
  "description": "patch",
  "homepage": "https://github.com/SARDONYX-sard/d-merge",
  "type": "module",
  "scripts": {
    "build": "rimraf ../frontend/out && tauri build --features extra_fmt,debug --no-bundle -- --profile release-no-lto",
    "build:front": "next build",
    "build:icons": "tauri icon ../../../backend/icons/icon.svg",
    "dev": "tauri dev",
    "dev:front": "next ../frontend",
    "fmt": "biome format --write ./ && prettier --cache --write \"**/*.{yaml,yml}\" --ignore-path ./.gitignore && cargo fmt --all",
    "lint": "biome lint ./ && cargo clippy --workspace",
    "lint:fix": "npm run fmt && biome check --write ./ && cargo clippy --workspace --fix --allow-staged --allow-dirty",
    "tauri": "tauri",
    "test": "vitest run",
    "test:all": "npm test && npm run test:back",
    "test:back": " cargo test --workspace",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@monaco-editor/react": "4.7.0",
    "@mui/icons-material": "7.3.1",
    "@mui/lab": "7.0.0-beta.17",
    "@mui/material": "7.3.4",
    "@mui/x-data-grid": "8.14.1",
    "@mui/x-tree-view": "8.14.1",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "2.4.0",
    "@tauri-apps/plugin-fs": "^2.4.2",
    "@tauri-apps/plugin-opener": "^2.5.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "i18next": "25.6.0",
    "immer": "^10.1.3",
    "next": "15.5.6",
    "notistack": "3.0.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-i18next": "16.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@tauri-apps/cli": "2.8.4",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react-swc": "4.1.0",
    "jsdom": "27.0.1",
    "prettier": "3.6.2",
    "rimraf": "^6",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "overrides": {
    "monaco-editor": "^0.49.0"
  }
}
