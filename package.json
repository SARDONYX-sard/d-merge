{
  "name": "d-merge",
  "version": "0.1.0",
  "private": true,
  "description": "patch",
  "homepage": "https://github.com/SARDONYX-sard/d-merge",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "rimraf ./gui/frontend/out && tauri build --features extra_fmt,debug --no-bundle -- --profile release-no-lto",
    "build:front": "next build ./gui/frontend",
    "build:icons": "cargo tauri icon ./gui/backend/icons/icon.png",
    "dev": "tauri dev",
    "dev:front": "next ./gui/frontend",
    "fmt": "biome format --write ./ && prettier --cache --write \"**/*.{yaml,yml}\" --ignore-path ./.gitignore && cargo fmt --all",
    "lint": "next lint ./gui/frontend -c ./gui/frontend/eslint.config.mjs && biome lint ./ && cargo clippy --workspace",
    "lint:fix": "npm run fmt && biome check --write ./ && next lint ./gui/frontend --fix -c ./gui/frontend/eslint.config.mjs && cargo clippy --workspace --fix --allow-staged --allow-dirty",
    "tauri": "tauri",
    "test": "vitest run",
    "test:all": "npm test && npm run test:back",
    "test:back": " cargo test --workspace",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@monaco-editor/react": "4.7.0",
    "@mui/icons-material": "7.1.0",
    "@mui/lab": "7.0.0-beta.12",
    "@mui/material": "7.1.0",
    "@mui/x-data-grid": "8.3.1",
    "@mui/x-tree-view": "8.3.1",
    "@tauri-apps/api": "2.5.0",
    "@tauri-apps/plugin-dialog": "2.2.1",
    "@tauri-apps/plugin-fs": "2.2.1",
    "@tauri-apps/plugin-opener": "^2.2.7",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "i18next": "25.1.3",
    "immer": "^10.1.1",
    "next": "15.3.2",
    "notistack": "3.0.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "15.5.1",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tauri-apps/cli": "2.5.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@types/node": "22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "19.1.5",
    "@vitejs/plugin-react-swc": "3.9.0",
    "eslint": "9.27.0",
    "eslint-config-next": "15.3.2",
    "jsdom": "26.1.0",
    "prettier": "3.5.3",
    "rimraf": "^6",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.3"
  },
  "overrides": {
    "monaco-editor": "^0.49.0"
  },
  "packageManager": "npm@10.8.3"
}
