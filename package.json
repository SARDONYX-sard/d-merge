{
  "name": "d-merge",
  "version": "0.1.0",
  "private": true,
  "description": "patch",
  "homepage": "https://github.com/SARDONYX-sard/d-merge",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "rimraf ./gui/frontend/out && tauri build --features extra_fmt,debug --no-bundle -- --profile release-no-lto",
    "build:front": "next build ./gui/frontend",
    "build:icons": "tauri icon ./gui/backend/icons/icon.svg",
    "dev": "tauri dev",
    "dev:front": "next ./gui/frontend",
    "fmt": "biome format --write ./ && prettier --cache --write \"**/*.{yaml,yml}\" --ignore-path ./.gitignore && cargo fmt --all",
    "lint": "biome lint ./ && cargo clippy --workspace",
    "lint:fix": "npm run fmt && biome check --write ./ && cargo clippy --workspace --fix --allow-staged --allow-dirty",
    "tauri": "tauri",
    "test": "vitest run",
    "test:all": "npm test && npm run test:back",
    "test:back": " cargo test --workspace",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@monaco-editor/react": "4.7.0",
    "@mui/icons-material": "7.2.0",
    "@mui/lab": "7.0.0-beta.14",
    "@mui/material": "7.2.0",
    "@mui/x-data-grid": "8.9.1",
    "@mui/x-tree-view": "8.7.0",
    "@tauri-apps/api": "2.7.0",
    "@tauri-apps/plugin-dialog": "2.3.0",
    "@tauri-apps/plugin-fs": "2.4.0",
    "@tauri-apps/plugin-opener": "^2.4.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "i18next": "25.3.1",
    "immer": "^10.1.1",
    "next": "15.3.5",
    "notistack": "3.0.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "15.6.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.0",
    "@tauri-apps/cli": "2.7.1",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@types/node": "24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react-swc": "3.10.2",
    "jsdom": "26.1.0",
    "prettier": "3.6.2",
    "rimraf": "^6",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "overrides": {
    "monaco-editor": "^0.49.0"
  },
  "packageManager": "npm@10.8.3"
}
